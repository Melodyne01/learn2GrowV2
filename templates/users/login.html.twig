<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Learn2Grow | Learn, Grow, Succeed{% endblock %}</title>
        <link rel="icon" href="">
        
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- UIkit CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/css/uikit.min.css" />
        <link rel="stylesheet" href="{{ asset('css/index.css') }}" />

        <!-- UIkit JS -->
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.21.5/dist/js/uikit-icons.min.js"></script>
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <main>
            <div class="uk-child-width-1-1@s" uk-grid>
                <div>
                    <div class="uk-background-cover uk-height-entire-page uk-panel " style="background-image: url(images/bg.webp);">
                        <div class="uk-card uk-card-default uk-height-entire-page uk-width-1-3@l uk-width-1-2@m uk-width-2-3@s uk-align-right uk-card-body">
                            <a href="{{path('app_home')}}" class="uk-icon-link" uk-icon="chevron-left"></a>
                            <a class="uk-link-reset" href="{{path('app_home')}}">Retour</a>
                            <div class="errorMessage">
                                {% for message in app.flashes("danger") %}
                                <div class="uk-alert-danger" uk-alert>
                                    <a href class="uk-alert-close" uk-close></a>
                                    <p>{{ message }}</p>
                                </div>
                                {% endfor %}
                                {% for message in app.flashes("success") %}
                                <div class="uk-alert-success" uk-alert>
                                    <a href class="uk-alert-close" uk-close></a>
                                    <p>{{ message }}</p>
                                </div>
                                {% endfor %}
                            </div>
                            <ul class="uk-subnav uk-subnav-pill" uk-switcher>
                                <li><a href="#">Connexion</a></li>
                                <li><a href="#">Inscription</a></li>
                            </ul>
                            <ul class=" uk-switcher uk-align-center uk-margin">                  
                                <li>
                                    <form method="post" action="{{ path('login') }}">
                                        <div class="uk-margin">
                                            <div class="uk-inline uk-width-1-1">
                                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                                <input class="uk-input" name="_username" placeholder="Adresse mail" type="text" aria-label="Not clickable icon">
                                            </div>
                                        </div>
                                    
                                        <div class="uk-margin">
                                            <div class="uk-inline uk-width-1-1">
                                                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                                <input class="uk-input" type="password" name="_password" placeholder="Mot de passe" type="text" aria-label="Not clickable icon">
                                            </div>
                                        </div>
                                        <div class="uk-width-1-1">
                                            <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Se connecter</button>
                                        </div>
                                    </form>
                                    <a href="#" uk-switcher-item="previous">Vous n'avez pas de compte ? Inscrivez-vous</a>
                                </li>
                                <li>
                                    <form class="uk-grid-small" method="post" action="{{ path('app_register') }}" uk-grid>
                                        {{ form_start(form) }}
                                            <div class="uk-width-1-1">
                                                {% if form_errors(form.firstname) %}
                                                    <div class="formError">{{form_errors(form.firstname)}}</div>
                                                {% endif %}
                                                <div class="uk-margin">
                                                    <div class="uk-inline uk-width-1-1">
                                                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                                                        {{ form_widget(form.firstname) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="uk-width-1-1">
                                                {% if form_errors(form.lastname) %}
                                                    <div class="formError">{{form_errors(form.lastname)}}</div>
                                                {% endif %}
                                                <div class="uk-margin">
                                                    <div class="uk-inline uk-width-1-1">
                                                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                                                        {{ form_widget(form.lastname) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="uk-width-1-1">
                                                {% if form_errors(form.email) %}
                                                    <div class="formError">{{form_errors(form.email)}}</div>
                                                {% endif %}
                                                <div class="uk-margin">
                                                    <div class="uk-inline uk-width-1-1">
                                                        <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                                        {{ form_widget(form.email) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="uk-width-1-1">
                                                {% if form_errors(form.password) %}
                                                    <div class="formError">{{form_errors(form.password)}}</div>
                                                {% endif %}
                                                <div class="uk-margin">
                                                    <div class="uk-inline uk-width-1-1">
                                                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                                        {{ form_widget(form.password) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="uk-width-1-1">
                                                {% if form_errors(form.confirmPassword) %}
                                                    <div class="formError">{{form_errors(form.confirmPassword)}}</div>
                                                {% endif %}
                                                <div class="uk-margin">
                                                    <div class="uk-inline uk-width-1-1">
                                                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                                        {{ form_widget(form.confirmPassword) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="uk-width-1-1">
                                                <button type="submit" class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Cr√©er mon compte</button>
                                            </div>
                                        {{ form_end(form) }}
                                    </form>
                                    <a href="#" uk-switcher-item="previous">Vous n'avez pas de compte ? Inscrivez-vous</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>
</html>
