{% extends 'base.html.twig' %}

{% block body %}
<div class="uk-section uk-section-muted">
    <div class="uk-container">
        <h3>My informations</h3>
        <div class="uk-margin">
            <img class="uk-margin-small-right uk-border-circle" src="{{ asset('images/photo2.jpg') }}" width="150" height="150" alt="Border pill">
        </div>
        <form class="uk-grid-small" uk-grid>
            <div class="uk-width-1-2@s">
                <input class="uk-input" type="text" placeholder="{{user.firstname}}" aria-label="50" disabled>
            </div>
            <div class="uk-width-1-2@s">
                <input class="uk-input" type="text" placeholder="{{user.lastname}}" aria-label="50" disabled>
            </div>
            <div class="uk-width-1-1">
                <input class="uk-input" type="text" placeholder="{{user.email}}" aria-label="100" disabled>
            </div>
        </form>
    </div>
</div>
<div class="uk-section uk-section-default">
    <div class="uk-container">
        <h3>My journey</h3>
        <table class="uk-table uk-table-striped">
            <tbody>
                <tr>
                    <td>C# Basics Quiz: Fundamentals and Syntax</td>
                    <td>5 min</td>
                    <td><span class="uk-margin-small-right" uk-icon="check"></span>
                    </td>
                </tr>
                <tr>
                    <td>C# Intermediate Quiz: Data Types and Control Flow
                    </td>
                    <td>10 min</td>
                    <td><span class="uk-margin-small-right" uk-icon="check"></span>
                    </td>
                </tr>
                <tr>
                    <td>C# Object-Oriented Programming Quiz: Classes and Inheritance</td>
                    <td>10 min</td>
                    <td><span class="uk-margin-small-right" uk-icon="check"></span>
                    </td>
                </tr>
                <tr>
                    <td>C# Advanced Quiz: LINQ and Asynchronous Programming</td>
                    <td>15 min</td>
                    <td></td>
                </tr>
                <tr>
                    <td>C# Expert Quiz: Design Patterns and Memory Management</td>
                    <td>30 min</td>
                    <td></td>
                </tr>
                
            </tbody>
        </table>
    </div>
</div>
<div class="uk-section uk-section-default">
    <div class="uk-container">
        <h3>My certificates</h3>
        <table class="uk-table uk-table-striped">
            <thead>
                <tr>
                    <th>Quizz</th>
                    <th>Created At</th>
                    <th>Obtained on </th>
                </tr>
            </thead>
            <tbody>
                {% for certification in certifications %}
                    <tr>
                        <td>{{certification.quizz.title|length > 60 ? certification.quizz.title|slice(0, 60) ~ '...' : certification.quizz.title}}</td>
                        <td>{{certification.result}}%</td>
                        <td>{{certification.createdAt|date("Y-m-d")}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
